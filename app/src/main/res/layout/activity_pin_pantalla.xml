<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:src="@mipmap/ic_launcher_foreground" />
    <TextView
        android:id="@+id/inicioTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Bienvenid@ de nuevo!"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        android:textColor="@color/darkblue"
        style="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Qué vamos a hacer hoy?"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        style="@style/TextAppearance.AppCompat.Body1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        style="@style/TextAppearance.AppCompat.Body1"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        app:boxStrokeColor="@color/darkblue"
        app:boxStrokeErrorColor="@color/salmon"
        app:hintTextColor="@color/salmon"
        app:cursorColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pinPantalla"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:hint="Ingresa tu PIN de acceso"
            android:inputType="numberPassword">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/teal"
        android:textColor="@color/design_default_color_on_primary"
        android:text="Ingresar" />

</LinearLayout>